<% Item.kinds.each do |kind| %>
  <% if items[kind.name].present? %>
## <%= kind.name.pluralize.html_safe %>

    <% items[kind.name].each do |item| %>
      <% if item.date.present? %>
### <%= date_label(item) %><%= item.title.html_safe %>
      <% else %>
### <%= item.title.html_safe %>
      <% end %><%= "(#{item.author})".html_safe if include_authors && item.author.present? %>
      <% if item.description.present? %>

<%= item.description.html_safe %>
      <% end %>

    <% end %>

  <% end %>
<% end %>
